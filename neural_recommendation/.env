# =============================================================================
# ENVIRONMENT CONFIGURATION FOR TWO-TOWER RECOMMENDATION SYSTEM
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql+psycopg://app_user:app_password@localhost:5433/app_db

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# -----------------------------------------------------------------------------
# ML Model Training Configuration
# -----------------------------------------------------------------------------

# Training Parameters
ML_NUM_EPOCHS=30
ML_BATCH_SIZE=1280
ML_LEARNING_RATE=0.001
ML_MAX_GRAD_NORM=1.0
ML_DROPOUT_RATE=0.3

# Model Architecture
ML_EMBEDDING_SIZE=128
ML_LAYER_SIZES=[64]

# Data Splitting
ML_TRAIN_SPLIT=0.6
ML_VAL_SPLIT=0.2
ML_TEST_SPLIT=0.2
ML_SAMPLE_USERS=500

# Loss Function Configuration
ML_LOSS_TYPE=explicit_negatives
ML_TEMPERATURE=0.1
ML_NUM_NEGATIVES=20
ML_USE_HARD_NEGATIVES=false
ML_HARD_NEGATIVE_RATIO=0.7
ML_NUM_SAMPLED_NEGATIVES=1000

# Hardware & Performance
ML_DEVICE=cuda
ML_SENTENCE_MODEL=all-MiniLM-L6-v2

# Model Storage
ML_MODELS_DIR=models
ML_MODEL_NAME=two_tower_model.pth
ML_HISTORY_NAME=training_history.json
ML_PLOT_NAME=training_curves.png
ML_RETRAIN=false
